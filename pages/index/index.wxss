.header {
  background: none;
  position: relative;
  padding: 10px;
}
.header .bg {
  position:absolute;
  z-index:-1;
  height:100%;
  width:100%;
  top:0;
  left:0;
}
.userinfo-avatar {
  width: 60px;
  height: 60px;
  border: 2px solid white;
   border-radius: 50%; 
  margin: 10px 0;
}
.userinfo-nickname {
  display: block;
  font-size: 18px;
}
